<h1>Vista de productos</h1>

{{#if data}}
    <table class="table">
        <thead>
            <tr>
                <td scope="col">ID</td>
                <td scope="col">Title</td>
                <td scope="col">Price</td>
                <td scope="col">Thumbnail</td>
            </tr>
        </thead>

        <tbody>
            {{#each data}}
                <tr scope="row">
                    <td> {{this.id}} </td>
                    <td> {{this.title}} </td>
                    <td> {{this.price}} </td>
                    <td>
                        <img src={{this.thumbnail}} alt="image_not_found" srcset="">
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <h4>No hay productos</h4>
{{/if}}