<div class="container">
    <div>
        {{> form }}
    </div>
    <div>
        <h2>Productos</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Thumbnail</th>
                </tr>
            </thead>
            <tbody id="output">
                {{#if data}}
                    {{#each data}}
                        <tr scope="row">
                            <td> {{this.id}} </td>
                            <td> {{this.title}} </td>
                            <td> {{this.price}} </td>
                            <td>
                                <img src={{this.thumbnail}} alt="image_not_found">
                            </td>
                        </tr>
                    {{/each}}
                {{!-- {{else}}
                    <h6 class="text-muted">No hay productos</h6> --}}
                {{/if}}
            </tbody>
        </table>
    </div>
</div>