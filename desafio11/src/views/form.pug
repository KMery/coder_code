extends index 

block partial 
    body 
        div.card(class="col-8 p-5")
            h2.card-title!="Ingreso de datos"
            div.card-body
                form(action="/api/productos", method="post" class="form-group") 
                    input(type="text" name="title" placeholder="Enter title..." class="form-control")
                    input(type="text" name="price" placeholder="Enter price..." class="form-control mt-2" pattern="\\d*([.,]?\\d+)")
                    input(type="text" name="thumbnail" placeholder="Link to image..." class="form-control mt-2")
                    button(type="submit" class="btn btn-dark form-control block mt-2")!="Submit" 