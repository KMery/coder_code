<%- include('./partials/head') %>

<div>
    <h1>Vista productos</h1>
    <% if (data.length > 0) { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Thumbnail</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(product => { %>
                    <tr scope="row">
                        <td> <%= product.id %> </td>
                        <td> <%= product.title %> </td>
                        <td> <%= product.price %> </td>
                        <td> 
                            <img src=<%= product.thumbnail %> alt="image not found :C">
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <h4>No hay productos</h4>
    <% } %>
</div>
